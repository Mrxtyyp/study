{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "lib": ["ESNext", "DOM", "es2015"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
